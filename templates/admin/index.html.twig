                </li>
            {% else %}
                <li>no records found</li>
            {% endfor %}
        </ul>
    </div>
    <div>
        <h4>Réservations du Poste 3</h4>
          <ul>
            {% for poste_three in poste_threes %}
                <li>{{ poste_three.id }} - 
                    {{ poste_three.title }} - 
                    {{ poste_three.start ? poste_one.start|date('d-m-Y') : '' }} / 
                    {{ poste_three.end ? poste_one.end|date('d-m-Y') : '' }} - 
                    {{ poste_three.isApprouved ? 'Yes' : 'No' }}
                    <a href="{{ path('app_poste_three_edit', {'id': poste_three.id}) }}">Modifier</a>
                </li>
            {% else %}
                <li>no records found</li>
            {% endfor %}
        </ul>
    </div>
    <div>
        <h4>Réservations du Poste 4</h4>
          <ul>
            {% for poste_four in poste_fours %}
                <li>{{ poste_four.id }} - 
                    {{ poste_four.title }} - 
                    {{ poste_four.start ? poste_one.start|date('d-m-Y') : '' }} / 
                    {{ poste_four.end ? poste_one.end|date('d-m-Y') : '' }} - 
